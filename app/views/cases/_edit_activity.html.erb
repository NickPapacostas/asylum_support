<% @activities.each do |a| %>
  <div class="modal modal-lg edit-activity-modal-<%= a.id %>">
    <div class="modal-container">
      <div class="modal-header">
        <h5 class="modal-title" id="edit-activity-modal--title"></h5>
        <a href="#close" class="edit-activity-close btn btn-clear float-right modal-overlay" aria-label="Close"></a>
        <div class="modal-title h3">Activity form</div>
      </div>
      <div class="divider"></div>
      <div class="modal-body">
        <div class="container">
          <div class="columns">
            <div id="activity-modal-form">
              <%= render partial: 'activities/form', locals: {activity: a, submit_text: "Update activity", url: "/activities/#{a.id}", http_method: "PATCH"} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
